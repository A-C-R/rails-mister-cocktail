<div class="banner">
  <h1>The world`s best Drinks</h1>
</div>


<div class= "container">
   <div class="row justify-content-center">
    <div class="col-6">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
         <td><%= cl_image_tag cocktail.photo, height: 150, width: 200, crop: :thumb %></td>
        <td><%= link_to 'Show', cocktail_path(cocktail) %></td>
         <td><%= link_to 'Delete', cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Cocktail', new_cocktail_path %>

</div>
</div>
</div>
