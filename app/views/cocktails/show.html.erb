<div class= "container">

<p id="notice"><%= notice %></p>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<p>
  <h1>Name:</h1>
  <%= @cocktail.name %>
</p>

</div>

<div class= "container">
  <h2>Description & Ingredients:</h2>

  <% @cocktail.doses.each do |dose| %>
   <ul>
    <li>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
   </ul>
  <% end %>



<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.input :description %>
 <%= f.association :ingredient, input_html: {class: "select2"} %>
   <%= f.submit "Add a dose", class: "btn btn-primary" %>
   <% end %>

<%= link_to 'Back', cocktails_path, class: "btn btn-danger" %>
</div>
